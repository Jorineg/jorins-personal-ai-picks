---
import ModelCard from './ModelCard.astro';

interface Props {
    category: {
        name: string;
        slug: { current: string };
        description?: string;
        models: any[];
    };
}

const { category } = Astro.props;
---

<section id={category.slug?.current} class="py-12">
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-white mb-2">{category.name}</h2>
        {category.description && (
            <p class="text-slate-400 text-lg">{category.description}</p>
        )}
    </div>
    
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        {category.models?.map((model) => (
            <ModelCard model={model} />
        ))}
    </div>
</section>
