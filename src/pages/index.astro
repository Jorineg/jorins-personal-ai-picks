---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CategorySection from '../components/CategorySection.astro';
import { getCategories } from '../lib/sanity';

const categories = await getCategories();
---

<Layout title="Jorin's AI Picks - The Best AI Tools & Models">
    <Header categories={categories} />
    
    <main class="max-w-7xl mx-auto px-4 py-8">
        <div class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                The Best AI Tools & Models
            </h1>
            <p class="text-xl text-slate-400 max-w-2xl mx-auto">
                My personal, curated selection of the best AI tools and models across different categories.
                Updated regularly as the AI landscape evolves.
            </p>
        </div>
        
        {categories.map((category) => (
            <CategorySection category={category} />
        ))}
    </main>
    
    <footer class="border-t border-slate-800 py-8 mt-12">
        <div class="max-w-7xl mx-auto px-4 text-center text-slate-500">
            <p>Curated by Jorin Eggers</p>
            <div class="mt-4 flex justify-center gap-4 text-sm">
                <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a>
                <a href="/tos" class="hover:text-white transition-colors">Terms of Service</a>
            </div>
        </div>
    </footer>
</Layout>
