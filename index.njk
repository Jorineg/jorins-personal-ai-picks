---
layout: base.njk
---

<header class="site-header">
  <div class="container">
    <h1 class="site-name">Jorin</h1>
    <h1 class="site-title">Jorin's personal picks for helpful AI tools</h1>
  </div>
</header>

<main class="container">
  <div class="tabs-container">
    <div class="tabs-wrapper">
      {% for category in siteData.categories %}
        <button 
          class="tab-button {% if loop.first %}active{% endif %}" 
          role="tab" 
          aria-selected="{% if loop.first %}true{% else %}false{% endif %}" 
          aria-controls="panel-{{ category.slug }}"
          data-tab="{{ category.slug }}">
          {{ category.name }}
        </button>
      {% endfor %}
    </div>
  </div>
  
  <div class="tabs-content">
    {% for category in siteData.categories %}
      <div 
        id="panel-{{ category.slug }}" 
        class="tab-panel {% if loop.first %}active{% endif %}" 
        role="tabpanel" 
        aria-labelledby="tab-{{ category.slug }}">
        
        <div class="models-container">
          {% for model in category.models %}
            {% set company = {} %}
            {% for comp in siteData.companies %}
              {% if comp.id == model.company_id %}
                {% set company = comp %}
              {% endif %}
            {% endfor %}
            
            <div class="model-card">
              <div class="model-content">
                <div class="model-header">
                  {% if model.company_id and company.logoUrl %}
                    <img 
                      src="{{ company.logoUrl }}" 
                      alt="{{ company.name }} logo" 
                      class="company-logo"
                    >
                  {% elif model.logo_url_override %}
                    <img 
                      src="{{ model.logo_url_override }}" 
                      alt="{{ model.company_name_override }} logo" 
                      class="company-logo"
                    >
                  {% endif %}
                  
                  <div class="model-info">
                    <h3 class="model-name">{{ model.model_name }}</h3>
                    <p class="company-name">
                      {% if model.company_id %}
                        {{ company.name }}
                      {% else %}
                        {{ model.company_name_override }}
                      {% endif %}
                    </p>
                  </div>
                  
                  <div class="rank-badge">
                    {% if model.rank == 1 %}
                      <div class="medal rank-1">A1</div>
                    {% elif model.rank == 2 %}
                      <div class="medal rank-2">A2</div>
                    {% elif model.rank == 3 %}
                      <div class="medal rank-3">A3</div>
                    {% else %}
                      <div class="medal rank-other">A{{ model.rank }}</div>
                    {% endif %}
                  </div>
                </div>
                
                {% if model.description %}
                  <p class="model-description">{{ model.description }}</p>
                {% endif %}
                
                <div class="model-details">
                  <div class="pricing">
                    <span class="piggy-bank">üê∑</span>
                    <span class="pricing-text">{{ model.cheapest_option }}</span>
                  </div>
                  
                  {% if model.api_available %}
                    <div class="api-badge">API Available</div>
                  {% endif %}
                </div>
                
                <a href="{{ model.service_link }}" class="service-link" target="_blank" rel="noopener">
                  Visit <span class="arrow">‚Üí</span>
                </a>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
</main>

<footer class="site-footer">
  <div class="container">
    <p class="disclaimer">
      This directory represents personal recommendations and is not guaranteed to be complete or objective.
      All company logos are property of their respective owners and are used for identification purposes only.
    </p>
    <p class="copyright">¬© {{ '' | date('YYYY') }} Jorin's AI Directory</p>
  </div>
</footer>
