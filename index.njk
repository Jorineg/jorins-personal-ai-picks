---
layout: base.njk
---

<div class="hero">
    <h1>Jorin's personal picks<br>for helpful AI tools</h1>
</div>

<div class="tabs">
    {% for category in siteData.categories %}
        <button class="tab-button" data-tab="{{ category.slug }}">{{ category.name }}</button>
    {% endfor %}
</div>

<div class="tab-content">
    {% for category in siteData.categories %}
        <div class="tab-pane" id="{{ category.slug }}">
            <div class="category-description">
                <h2>{{ category.name }}</h2>
                <p>{{ category.description }}</p>
            </div>
            
            <div class="models-grid">
                {% for model in category.models %}
                    {% set company = siteData.companies | getCompanyById(model.company_id) %}
                    <div class="model-card">
                        <div class="model-header">
                            <div class="model-logo">
                                <img src="{{ company.logoUrl }}" alt="{{ company.name }} logo">
                            </div>
                            <div class="model-title">
                                <h3>{{ model.model_name }}</h3>
                                <p class="company-name">{{ company.name }}</p>
                            </div>
                            <div class="model-rank rank-{{ model.rank }}">
                                <span class="rank-number">{{ model.rank }}</span>
                            </div>
                        </div>
                        
                        <div class="model-body">
                            <p class="model-description">{{ model.description }}</p>
                            
                            <div class="model-pricing">
                                <div class="pricing-icon">
                                    <svg class="piggy-bank" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M19 5C19 3.9 18.1 3 17 3H7C5.9 3 5 3.9 5 5M19 5V19C19 20.1 18.1 21 17 21H7C5.9 21 5 20.1 5 19V5M19 5H5M7 8H17M7 12H17M7 16H13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                </div>
                                <p class="pricing-text">Cheapest option: {{ model.cheapest_option }}</p>
                            </div>
                            
                            <div class="model-api {% if model.api_available %}available{% else %}unavailable{% endif %}">
                                <span class="api-label">API:</span>
                                <span class="api-status">{{ 'Available' if model.api_available else 'Not Available' }}</span>
                            </div>
                            
                            <a href="{{ model.service_link }}" class="model-link" target="_blank" rel="noopener noreferrer">
                                Visit {{ company.name }}
                                <svg class="external-link" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M18 13V19C18 19.5304 17.7893 20.0391 17.4142 20.4142C17.0391 20.7893 16.5304 21 16 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V8C3 7.46957 3.21071 6.96086 3.58579 6.58579C3.96086 6.21071 4.46957 6 5 6H11M15 3H21M21 3V9M21 3L10 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>
